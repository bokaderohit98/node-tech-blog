<section class="section--center mdl-grid site-max-width">
  {{#each subscribers}}
    <div class="mdl-cell mdl-card mdl-shadow--4dp portfolio-card clickable">
      <div class="mdl-card__title">
        <h2 class="mdl-card__title-text">{{name}}</h2>
      </div>
      <div class="mdl-card__supporting-text">
        {{email}}
      </div>
      <div class="mdl-card__menu">
        <form action="/admin/subscribers/{{_id}}?_method=DELETE" method="post">
          <input type="hidden" name="_method" value="DELETE">
          <button class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect" value="DELETE">
            <i class="material-icons">delete</i>
          </button>
        </form>
      </div>
      </div>
    {{else}}

  {{/each}}
</section>
