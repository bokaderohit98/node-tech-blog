{{#each mainArticles}}
  <div class="mdl-grid site-max-width">
    <div class="mdl-cell mdl-cell--12-col mdl-card mdl-shadow--4dp welcome-card portfolio-card">
      <div class="mdl-card__title">
        <h2 class="mdl-card__title-text">{{title}}</h2>
      </div>
      <div class="mdl-card__supporting-text">
        {{description}}
      </div>
      <div class="mdl-card__actions mdl-card--border">
        <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect mdl-button--accent" href=" https://templateflip.com/templates/material-portfolio/">Read</a>
      </div>
    </div>
  </div>
  {{else}}

{{/each}}

<section class="section--center mdl-grid site-max-width">
  {{#each articles}}
    <div class="mdl-cell mdl-card mdl-shadow--4dp portfolio-card clickable" onclick="location.href='/articles/{{_id}}'">
      <div class="mdl-card__media">
        <img class="article-image" src="img/portfolio1.jpg" border="0" alt="">
      </div>
      <div class="mdl-card__title">
        <h2 class="mdl-card__title-text">{{title}}</h2>
      </div>
      <div class="mdl-card__supporting-text">
        {{description}}
      </div>
    </div>
    {{else}}

  {{/each}}
</section>
